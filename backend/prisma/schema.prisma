
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Transacao {
  ID_TRANSACAO        Int     @id @default(autoincrement()) 
  NOME_TRANSACAO      String
  VALOR_TRANSACAO     Decimal
  TIPO_TRANSACAO      String
  DATA_TRANSACAO      DateTime
  DESCRICAO_TRANSACAO String?

  CATEGORIA_ID        Int
  CATEGORIA_TRANSACAO Categoria @relation(fields: [CATEGORIA_ID], references: [ID_CATEGORIA])

  @@map("TRANSACAO")
}

model Categoria {
  ID_CATEGORIA          Int        @id @default(autoincrement())
  DESCRICAO_CATEGORIA   String
  TRANSACOES            Transacao[]

  @@map("CATEGORIA")
}